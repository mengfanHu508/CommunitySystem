<!DOCTYPE html>
<html>
<head>
<title>修改密码</title>
<%-include('bt.ejs')%>
</head>
<body style="background:url(photo/bg.jpg);background-repeat:no-repeat;backgroung-attachment:fixed">
	<%-include('nav.ejs')%>
	<div class="container">
		<div class="row" style="margin-top: 10px">
			<%-include('lf.ejs')%>
			<div class="col-lg-6">
				<div class="card">
					<div class="card-header">修改密码</div>
					<div class="card-body">
						<p style="color: red"><%= info %></p>
						<form method="post" action="SetPwd">
						
							<div class="form-group row">
								<label for="inputPassword4" class="col-sm-3 col-form-label">输入旧密码</label>
								<div class="col-sm-8">
									<input type="password" name="password" class="form-control"
										id="inputPassword4" placeholder="密码" required="required">
								</div>
							</div>		
							<div class="form-group row">
								<label for="inputPassword3" class="col-sm-3 col-form-label">输入新密码</label>
								<div class="col-sm-8">
									<input type="password" name="newpassword" class="form-control"
										id="inputPassword3" placeholder="密码" required="required">
								</div>
							</div>						
							<div class="form-group row">
								<div class="col-sm-10">
									<button type="submit" class="btn btn-primary">修改</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<%-include('lr.ejs')%>
		</div>

	</div>
<div class="col-lg-6">
	<div>
		<br></br>
		<br></br>
		<br></br>
		<br></br>
	</div>
</div>
<%-include('bottom.ejs')%>
</body>
</html>